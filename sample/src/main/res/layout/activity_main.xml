<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

    <Button
      android:id="@+id/button_custom_dialog"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Custom Dialog"
      app:layout_constraintBottom_toTopOf="@+id/button_custom_click_listener"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <Button
      android:id="@+id/button_custom_click_listener"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Custom Click Listener"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button_custom_dialog"/>
</androidx.constraintlayout.widget.ConstraintLayout>